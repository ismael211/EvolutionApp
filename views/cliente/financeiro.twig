{% extends 'cliente/base_cliente.html' %}

{% block conteudo %}

<div id="page-wrapper">

  <div class="row">
    <div class="col-lg-12">
      <h1>Financeiro <small>Visualizar Faturas</small></h1>
      <ol class="breadcrumb">
        <li class="active"><i class="fa fa-dollar"></i> Visualizar Faturas</li>
      </ol>

      <!-- ################# LOCAL DE ALERTA ####################### -->

    </div>
  </div><!-- /.row -->



  <div class="row">

      <div class="col-lg-12">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-money"></i> Fatura(s) Aberta(s)</h3>
          </div>
          <div class="panel-body">
            <div class="table-responsive">
                
                  <table class="table table-bordered table-hover table-striped tablesorter">
                    <thead>
                      <tr>
                        <th># <i class="fa fa-sort"></i></th>
                        <th>Descrição <i class="fa fa-sort"></i></th>
                        <th>Data de Venciemtno <i class="fa fa-sort"></i></th>
                        <th>Valor(R$) <i class="fa fa-sort"></i></th>
                        <th>Status <i class="fa fa-sort"></i></th>
                      </tr>
                    </thead>
                    <tbody>

                      {% if faturas_abertas|length > 0 %}
                      {% for valor in faturas_abertas %}
                      <tr>
                        <td></td>
                        <td><a href="/visualizar/fatura/{{ valor.codigo }}">{{ valor.descricao }}</a></td>
                        <td><a href="/visualizar/fatura/{{ valor.codigo }}">{{ valor.data_vencimento }}</a></td>
                        <td><a href="/visualizar/fatura/{{ valor.codigo }}">{{ valor.valor }}</a></td>

                        {% if valor.status == 'on' %}
                          <td><span class="label label-success">Paga</span></td>
                        {% else %}
                          <td><span class="label label-danger">Em Aberto</span></td>
                        {% endif %}

                      </tr>
                      {% endfor %}
                      {% else %}
                          <tr>
                            <td></td>
                            <td>Nenhum Registro</td>
                            <td></td>
                            <td></td>
                            <td></td>
                          </tr>
                      {% endif %}
                     
                    </tbody>
                  </table>

            </div>
            <div class="text-right">
              
            </div>
          </div>
        </div>
      </div>

    </div><!-- /.row -->

    <div class="row">

        <div class="col-lg-12">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title"><i class="fa fa-list"></i> Histórico</h3>
            </div>
            <div class="panel-body">
              <div class="table-responsive">

                    <table class="table table-bordered table-hover table-striped tablesorter">
                      <thead>
                        <tr>
                          <th># <i class="fa fa-sort"></i></th>
                          <th>Descrição <i class="fa fa-sort"></i></th>
                          <th>Data de Venciemtno <i class="fa fa-sort"></i></th>
                          <th>Valor(R$) <i class="fa fa-sort"></i></th>
                          <th>Status <i class="fa fa-sort"></i></th>
                        </tr>
                      </thead>
                      <tbody>

                        {% if faturas|length > 0 %}
                        {% for valor in faturas %}
                        <tr>
                          <td></td>
                          <td><a href="/visualizar/fatura/{{ valor.codigo }}">{{ valor.descricao }}</a></td>
                          <td><a href="/visualizar/fatura/{{ valor.codigo }}">{{ valor.data_vencimento }}</a></td>
                          <td><a href="/visualizar/fatura/{{ valor.codigo }}">{{ valor.valor }}</a></td>

                          {% if valor.status == 'on' %}
                            <td><span class="label label-success">Paga</span></td>
                          {% else %}
                            <td><span class="label label-danger">Em Aberto</span></td>
                          {% endif %}

                        </tr>
                        {% endfor %}
                        {% else %}
                            <tr>
                              <td></td>
                              <td>Nenhum Registro</td>
                              <td></td>
                              <td></td>
                              <td></td>
                            </tr>
                        {% endif %}
                       
                      </tbody>
                    </table>

              </div>
              <div class="text-right">
                
              </div>
            </div>
          </div>
        </div>

      </div><!-- /.row -->



</div><!-- /#page-wrapper -->

{% endblock %}