{% extends 'cliente/base_cliente.html' %}

{% block conteudo %}


<div id="page-wrapper">

  <div class="row">
    <div class="col-lg-12">
      <h1>Licença <small>Visualizar Lincença</small></h1>
      <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Painel</a></li>
        <li class="active"><i class="fa fa-key"></i> Visualizar Lincença</li>
      </ol>

      <!-- ################# LOCAL DE ALERTA ####################### -->

    </div>
  </div><!-- /.row -->



  <div class="row">

    <div class="col-lg-12">

          {% if tipo_cliente == "r" %}
            <ol class="breadcrumb">
              <li class="active form-inline">

                  <div class="form-group">
                      <select class="form-control" name="opcoes" id="opcoes">
                        <option value="0" selected="selected"> -- Opções -- </option>
                        <option value="ativar">Ativar</option>
                        <option value="desativar">Desativar</option>
                       
                      </select>
                  </div>
                  <div class="form-group">
                      <button type="button" class="btn btn-primary" id="action_bt_licenca_cliente">OK</button>
                  </div>

              </li>
            </ol>
          {% endif %}
      
            <table class="table table-bordered table-hover table-striped tablesorter">
              <thead>
                <tr>
                   {% if tipo_cliente == "r" %}<th># <i class="fa fa-sort"></i></th>{% endif %}
                  <th>Sub-Domínio <i class="fa fa-sort"></i></th>
                  <th>Key <i class="fa fa-sort"></i></th>
                  <th>Status <i class="fa fa-sort"></i></th>
                </tr>
              </thead>
              <tbody>


              {% if licen|length > 0 %}
              {% for valor in licen %}
                <tr>
                   {% if tipo_cliente == "r" %}
                   <td><input type="checkbox" name="id_licenca" id="id_licenca" value="{{ valor.id }}"></td>
                   {% endif %}
                  <td>{{ valor.sub_dominio }}</td>
                  <td>{{ valor.key_licenca }}</td>

                  {% if valor.status == '1' %}
                    <td><span class="label label-success">Ativado</span></td>
                  {% else %}
                    <td><span class="label label-danger">Desativado</span></td>
                  {% endif %}

                </tr>

              {% endfor %}
              {% else %}
                  <tr>
                    <td></td>
                    <td>Nenhum Registro</td>
                    <td></td>
                    <td></td>
                    <td></td>
                  </tr>
              {% endif %}

               
              </tbody>
            </table>
          
    </div>

  </div><!-- /.row -->



</div><!-- /#page-wrapper -->

{% endblock %}