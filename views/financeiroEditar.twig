{% extends 'base.html' %}

{% block conteudo %}

<div id="page-wrapper">

  <div class="row">
    <div class="col-lg-12">
      <h1>Financeiro <small>Editar Fatura</small></h1>
      <ol class="breadcrumb">
        <li class="active"><i class="fa fa-dollar"></i> Editar Fatura</li>
      </ol>

      <!-- ################# LOCAL DE ALERTA ####################### -->

    </div>
  </div><!-- /.row -->
  

    <span id="status_volta"></span>

  <div class="row">

    <div class="col-lg-12">

      {% if fatura|length == 1 %}
      {% for valor in fatura %}
      <form role="form">
          
          <div class="form-group">
             <label>Cliente</label>
             <input  type="hidden" name="id_fatura" id="id_fatura" value="{{ valor.codigo }}">
             <p><strong>{{ valor.nome_cliente }}</strong></p>
          </div>

           <div class="form-group">
             <label>Status</label>
             <select class="form-control" id="status" name="status" >
               <option value="off" {% if valor.status == "off" %} selected="selected" {% endif %}>Aberta</option>
               <option value="on" {% if valor.status == "on" %} selected="selected" {% endif %}>Quitada</option>
             </select>
           </div>

           <div class="form-group">
             <label>Data de Vencimento</label>
             <input class="form-control mask_data_br" type="text" name="data_vencimento" id="data_vencimento" value="{{ valor.data_vencimento }}">
           </div>

           <div class="form-group">
             <label>Obs</label>
             <textarea class="form-control" rows="3" name="descricao" id="descricao">{{ valor.descricao }}</textarea>
           </div>

           <div class="form-group">
             <label>Valor</label>
             <input class="form-control" type="text" name="valor" id="valor" value="{{ valor.valor }}">
           </div>
             
           <div class="well">
             <button type="button" class="btn btn-primary" id="bt_editar_fatura">Editar</button>  
           </div>

       </form>
       {% endfor %}
       {% endif %}
         
    </div>

  </div><!-- /.row -->



</div><!-- /#page-wrapper -->

{% endblock %}